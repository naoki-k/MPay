.tradelog
  %h1.tradelog__title 取引履歴
  %table.trade__table
    %tbody.tradelog__items
      - @trades&.each do |trade|
        %tr.tradelog__item-container
          - if sender?(trade)
            %td.tradelog__td.tradelog__name-label
              = trade.receiver.name
          - else
            %td.tradelog__td.tradelog__name-label
              = trade.sender.name
          %td.tradelog__td
            .trade__log-amount
              - if sender?(trade)
                .tradelog__symbol.-minus
                  ー
              - else
                .tradelog__symbol.-plus
                  ＋
              .tradelog__amount-label
                = "¥ #{trade.amount}"
          %td.tradelog__td.tradelog__date-label
            = trade.created_at.strftime("%Y/%m/%d %H:%M")
